{% extends 'base.html.twig' %}

{% block title %}Lista Clientes{% endblock %}

{% block body %}

    {% if clientes|length == 0 %}
        <h3 class="centerText">No hay Clientes</h3>
    {% else %}

        <h3 class="centerText">Lista de Clientes</h3>

        <table class="List">

            <tr>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Fecha Nacimiento</th>
                <th>Domicilio</th>
                <th>Telefono</th>
            </tr>

            {% for cliente in clientes %}
                <tr>
                    <td>{{ cliente.nombre }}</td>
                    <td>{{ cliente.apellidos }}</td>
                    <td>{{ cliente.fechaNacimiento  | format_datetime('medium', 'none', locale='es')}}</td>
                    <td>{{ cliente.domicilio}}</td>
                    <td>{{ cliente.telefono }}</td>
                </tr>
            {% endfor %}

        </table>

    {% endif %}

    <br>
    <center>
        <button  type="button" onclick="window.location.href='{{ path('añadir') }}'">Añadir</button>
        <button  type="button" onclick="window.location.href='{{ path('index') }}'">Volver</button>
        <button  type="button" onclick="window.location.href='{{ path('editar') }}'">Editar</button>
    </center>
    
{% endblock %}
